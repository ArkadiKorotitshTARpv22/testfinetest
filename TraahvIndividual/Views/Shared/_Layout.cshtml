<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background="~/Content/Images/bg-1.jpg" style="background-size: 100% 100vh;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-opacity-75" style="background-color: darkblue; margin-bottom: 30px; margin-top: 0px; ">
        <div class="container" style="background-color: darkblue; height: 100px; ">
           
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation" >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
          
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        @Html.ActionLink(
                            "Avaleht",
                            "Index",
                            "Home",
                            new { lang = ViewBag.Language },
                            new { @class = "nav-link" }
                        )
                    </li>
                    <li>
                        @Html.ActionLink(
                            "Trahvid",
                            "TraahvUsers",
                            "Home",
                            new { lang = ViewBag.Language },
                            new { @class = "nav-link" }
                        )
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == "finesender2000@gmail.com")
                        {
                            @Html.ActionLink(
                                "Admin Page",
                                "Traahv",
                                "Home",
                                new { lang = ViewBag.Language },
                                new { @class = "nav-link" }
                            )
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr style="border:solid black 1px;" />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
